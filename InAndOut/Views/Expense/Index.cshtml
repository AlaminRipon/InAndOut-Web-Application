@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new Expense</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                    <tr>
                        <td width="35%">
                            @expense.Name
                        </td>
                        <td width="35%">
                            @expense.Cost
                        </td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-route-id="@expense.Id" asp-controller="Expense" asp-action="Update">Update</a>
                                <a class="btn btn-danger mx-1" asp-route-id="@expense.Id" asp-controller="Expense" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }   
</div>

